.member-registration

  = render "devise/registrations/rg-header"

  %main
    .member-information
      %h2.l-head 
        会員情報入力
          
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .form-fields
          .form-field
            = f.label :nickname ,"ニックネーム"
            %span{class: "require"} 必須
            %br/
            %input{type: "text", placeholder: "例)メルカリ太郎", class: "input-default"}

          .form-field
            = f.label :email ,"メールアドレス"
            %span{class: "require"} 必須
            %br/
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "PC・携帯どちらでも可", class: "input-default"

          .form-field
            = f.label :password ,"パスワード"
            %span{class: "require"} 必須
            - if @minimum_password_length
              %em
            %br/
            = f.password_field :password, autocomplete: "new-password", placeholder: "7文字以上", class: "input-default"

          .form-field
            = f.label :password_confirmation, "パスワード確認"
            %span{class: "require"} 必須
            %br/
            = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "7文字以上", class: "input-default"

          .form-group
            %h3 本人確認
            %p 安心・安全にご利用いただくために、お客さまの本人情報の登録にご協力ください。他のお客さまに公開されることはありません。

          .form-field 
            = f.label "お名前(全角)"
            %span{class: "require"} 必須
            %br/
            %input{type: "text", placeholder: "例)山田", class: "input-default-half"}
            %input{type: "text", placeholder: "例)彩", class: "input-default-half"}

          .form-field 
            = f.label "お名前カナ(全角)"
            %span{class: "require"} 必須
            %br/
            %input{type: "text", placeholder: "例)ヤマダ", class: "input-default-half"}
            %input{type: "text", placeholder: "例)アヤ", class: "input-default-half"}

          = render 'devise/registrations/birthday'
          %p{class: "form-info-text"} ※ 本人情報は正しく入力してください。会員登録後、修正するにはお時間を頂く場合があります。

      .confirmation
        %button.red-btn{type: "submit"} 次へ進む
        %p.text-right 本人情報の登録について
        %i.icon-arrow-right

  = render "devise/registrations/rg-footer"