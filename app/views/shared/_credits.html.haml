= render 'shared/mypage-header'
- breadcrumb :credit
= render "layouts/breadcrumbs"
.default-body
  .member-registration
    %main
      .payment-information
        %h2.l-head 
          クレジットカード情報入力
        .default-confirmation
          .form-fields
            .form-field
              = form_with url: cards_path, method: :post, html: { name: "inputForm" } do |f|
                = f.label :カード番号
                %span{class: "require"} 必須
                %br/
                = f.text_field :card_number, type: 'text', class: 'input-default', placeholder: '半角英数字のみ', maxlength: "16"
                %br/
                %ul.signup-card-list
                  %li.signup-card-list__card
                    = image_tag("visa.svg", width: 49, height: 20)
                  %li.signup-card-list__card
                    = image_tag("master-card.svg", width: 34, height: 20)
                  %li.signup-card-list__card
                    = image_tag("saison-card.svg", width: 30, height: 20)
                  %li.signup-card-list__card
                    = image_tag("jcb.svg", width: 32, height: 20)
                  %li.signup-card-list__card
                    = image_tag("american_express.svg", width: 21, height: 20)
                  %li.signup-card-list__card
                    = image_tag("dinersclub.svg", width: 32, height: 20)
                  %li.signup-card-list__card
                    = image_tag("discover.svg", width: 32, height: 20)

                .form-field
                  = f.label :有効期限
                  %span{class: "require"} 必須
                .form-field_date
                  .cards-expire__wrap
                    = f.select :exp_month, [["01",1],["02",2],["03",3],["04",4],["05",5],["06",6],["07",7],["08",8],["09",9],["10",10],["11",11],["12",12]],{} , class: 'select-default'
                    %span.days 月
                    %br
                  .cards-expire__wrap
                    = f.select :exp_year, [["19",2019],["20",2020],["21",2021],["22",2022],["23",2023],["24",2024],["25",2025],["26",2026],["27",2027],["28",2028],["29",2029]],{} , class: 'select-default'
                    %span.dayst 年
          
                .form-field
                  = f.label :セキュリティーコード
                  %span{class: "require"} 必須
                  %br/
                  = f.text_field :cvc, type: 'text', class: 'input-default', placeholder: 'カード背面4桁もしくは3桁の番号', maxlength: "4"

                %p.about-card-info
                  %a.text-right カード裏面の番号とは>

                %button.red-btn{type: "submit"} 追加する
      = render 'shared/sidebar'
