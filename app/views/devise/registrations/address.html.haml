%body.default-body
.member-registration

  = render "devise/registrations/rg-header"
  %main
    .member-information
      %h2.l-head 
        お届け先住所入力
      = form_for(@user, url: sign_up_completed_path, html: {method: :post}) do |f|
        = f.hidden_field :nickname, value: @user.nickname
        = f.hidden_field :email, value: @user.email
        = f.hidden_field :password, value: @user.password
        = f.hidden_field :password_confirmation, value: @user.password_confirmation
        = f.hidden_field :family_name, value: @user.family_name
        = f.hidden_field :first_name, value: @user.first_name
        = f.hidden_field :family_name_kana, value: @user.family_name_kana
        = f.hidden_field :first_name_kana, value: @user.first_name_kana
        = f.hidden_field :birthday, value: @user.birthday
        = f.hidden_field :phone_number, value: @user.phone_number
        = f.hidden_field :postal_code, value: @user.postal_code
        = f.hidden_field :prefecture, value: @user.prefecture
        = f.hidden_field :city, value: @user.city
        = f.hidden_field :house_number, value: @user.house_number
        = f.hidden_field :building_name, value: @user.building_name

        .form-fields
          .form-field 
            %label お名前(全角)
            %span.require 必須
            %br/
            = f.text_field :family_name, autofocus: true, autocomplete: "family_name", placeholder: "例)山田", class: "input-default-half", required: ""
            = f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "例)彩", class: "input-default-half", required: ""

          .form-field 
            %label お名前カナ(全角)
            %span.require 必須
            %br/
            = f.text_field :family_name_kana, autofocus: true, autocomplete: "family_name_kana", placeholder: "例)ヤマダ", class: "input-default-half", required: ""
            = f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "例)アヤ", class: "input-default-half", required: ""
          
          .form-field
            = label :postal_code, "郵便番号"
            %span{class: "require"} 必須
            %br/
            = f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: "例)123-4567", class: "input-default", required: ""

          .form-field
            = label :postal_code, "都道府県"
            %span{class: "require"} 必須
            %br/
            = f.text_field :prefecture, autofocus: true, autocomplete: "prefecture", placeholder: "例)北海道", class: "input-default", required: ""

          .form-field
            = label :postal_code, "市区町村"
            %span{class: "require"} 必須
            %br/
            = f.text_field :city, autofocus: true, autocomplete: "city", placeholder: "例)横浜市緑区", class: "input-default", required: ""

          .form-field
            = label :postal_code, "番地"
            %span{class: "require"} 必須
            %br/
            = f.text_field :house_number, autofocuse: true, autocomplete: "house_number",  placeholder: "例)青山1-1-1", class: "input-default", required: ""

          .form-field
            = label :postal_code, "建物名"
            %span{class: "optional"} 任意
            %br/
            = f.text_field :building_name, autofocuse: true, autocomplete: "building_name", placeholder: "例)柳ビル103", class: "input-default"

          .form-field
            = label :postal_code, "電話番号"
            %span{class: "optional"} 任意
            %br/
            = f.text_field :phone_number, autofocuse: true, autocomplete: "phone_number", placeholder: "例)09012345678", class: "input-default"
          
          %button.red-btn{type: "submit"} 次へ進む
  = render "devise/registrations/rg-footer"