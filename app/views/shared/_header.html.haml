.header
  .header__line
    .header__line__top
      = image_tag('logo.svg',class:"logo")
    .form_mask
      = form_tag do
        %input{type:"search",name:"keyword",value:"",placeholder:"何かお探しですか？",class: "input"}
          =fa_icon "search",class:"icon"
  .header__bottom
    .header__bottom__btn
      %a.header__bottom__btn__user 新規会員登録
      %a.header__bottom__btn__sign ログイン

    .header__bottom__left
      %a
        =fa_icon "list-ul",class: "list"
      %span カテゴリーから探す

      %a
        =fa_icon "tag", class: "tag"
      %span ブランドから探す
    