%body.default-body
.member-registration

  = render "devise/registrations/rg-header"
  %main
    .member-information
      %h2.l-head 
        お届け先住所入力
      .default-confirmation
        .form-fields
          .form-field 
            = label :full_name, "お名前(全角)"
            %span{class: "require"} 必須
            %br/
            %input{type: "text", placeholder: "例)山田", class: "input-default-half"}
            %input{type: "text", placeholder: "例)彩", class: "input-default-half"}

          .form-field 
            = label :full_name_kana, "お名前カナ(全角)"
            %span{class: "require"} 必須
            %br/
            %input{type: "text", placeholder: "例)ヤマダ", class: "input-default-half"}
            %input{type: "text", placeholder: "例)アヤ", class: "input-default-half"}
          
          .form-field
            = label :postal_code, "郵便番号"
            %span{class: "require"} 必須
            %br/
            %input{type: "text", placeholder: "例)123-4567", class: "input-default"}

          .form-field
            = label :postal_code, "都道府県"
            %span{class: "require"} 必須
            %br/
            %input{type: "text", placeholder: "例)北海道", class: "input-default"}

          .form-field
            = label :postal_code, "市区町村"
            %span{class: "require"} 必須
            %br/
            %input{type: "text", placeholder: "例)横浜市緑区", class: "input-default"}

          .form-field
            = label :postal_code, "番地"
            %span{class: "require"} 必須
            %br/
            %input{type: "text", placeholder: "例)青山1-1-1", class: "input-default"}

          .form-field
            = label :postal_code, "建物名"
            %span{class: "optional"} 任意
            %br/
            %input{type: "text", placeholder: "例)柳ビル103", class: "input-default"}

          .form-field
            = label :postal_code, "電話番号"
            %span{class: "optional"} 任意
            %br/
            %input{type: "text", placeholder: "例)09012345678", class: "input-default"}
          
          %button.red-btn{type: "submit"} 
            =link_to "次へ進む", sign_up_credit_path

  = render "devise/registrations/rg-footer"